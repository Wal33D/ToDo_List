<%= form_for(@todo_list) do |f| %>
 <div class = "item">
<div class = "create">
            <div class="form-heading">
              <h2 class="header">Editing ToDo List: <%= @todo_list.title %></h2>
              <hr>
            </div>
            <div class="form-body">
            <form class="form-inline">
                <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-addon addon-green">Title</div>
                         <%= f.text_field :title, :class => "form-control", :placeholder=>"Example: Grocery List" %>
                        <div class="input-group-addon addon-green"></div>
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-addon addon-red">Deadline</div>
                         <%= f.datetime_field :deadline, :class => "form-control", :type=>"datetime-local"%>
                        <div class="input-group-addon addon-green"></div>
                      </div>
                </div>
                <div class="form-group">
                      <div class="input-group horz">
                        <div class="input-group-addon horz-addon">Description</div>

                         <%= f.text_area :description,  :rows=>"5", :class => "  form-control" %>
                    
                        <div class="input-group-addon horz-addon"></div>
                      </div>
                    </div>
            </div>
               <hr>
            <center>
              <div class="form-footer">
                <button class="btn btn-lg btn-primary create-button" type="submit">Save List</button> 
                <%= link_to 'Cancel', todo_lists_path,:class => "btn btn-lg btn-danger create-button" %>
                <% end %>  
              </div>
              </center>  
          </form>
            </div> 
</div>