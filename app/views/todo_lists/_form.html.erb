<%= form_for(@todo_list) do |f| %>
	<% if @todo_list.errors.any? %>
		<%= render 'layouts/messages' %>
	<% end %>
		TITLE<%= f.text_field :title, label: false, placeholder: 'Title' %><br>
		DESCRIPTION<%= f.text_field :description, label: false, placeholder: 'Description' %>
		<%= f.button :submit, class: 'small button radius success expand' %>
<% end %>