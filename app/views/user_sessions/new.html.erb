<%= form_tag user_sessions_path do %>
<div class="block blur">
  <div class="container">
    <div class="row">
      <div class="span12">
        <div class="clear-form">
          <form>
            <div class="form-heading gray">
              <h3 class="header center">Sign In</h3>
            </div>
            <div class="form-body">
              <div class="pair-group">
                <%= text_field_tag :email, params[:email] , :class =>"input-block-level", :placeholder =>"Email"%>
                <%= text_field_tag :password, params[:password] , :class =>"input-block-level", :placeholder =>"Password"%>    
              </div>
            </div>
            <div class="form-footer">
              <%= submit_tag "Sign In", :class => 'btn btn-lg btn-primary btn-block' %>
              <p class="center">Not yet a member? <%= link_to "Sign Up", new_user_path, :class => 'text-center new-account'  %><i class="icon-arrow-right"></i></p>
              <p class="center">Forgot Password? <%= link_to "Reset", new_password_reset_path, :class => 'text-center new-account'  %> <i class="icon-arrow-right"></i></p>
              <% end %>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>