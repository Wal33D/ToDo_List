<%= form_tag user_sessions_path do %>
      <div class = "signin">
        <h2 class="form-signin-heading">Please sign in</h2>
        <hr>
        <label for="inputEmail" class="sr-only">Email address</label>
        <%= text_field_tag :email, params[:email] , :id=>"inputEmail",:class =>"form-control", :placeholder =>"Email"%>
        <label for="inputPassword" class="sr-only">Password</label>
        <%= password_field_tag :password, params[:password] ,:id=>"inputPassword",:class =>"form-control", :placeholder =>"Password"%>   
        <div class="checkbox">
          <label>
            <input id = "check" value="remember-me" type="checkbox"> Remember me
          </label>
        </div>
       <%= submit_tag "Sign In", :class => 'btn btn-lg btn-primary btn-block' %>
        <hr>
       <p class="center">Not yet a member? <%= link_to "Sign Up", new_user_path, :class => 'text-center new-account'  %></p>
       <p class="center">Forgot Password? <%= link_to "Reset", new_password_reset_path, :class => 'text-center new-account'  %> </p>
  
      </div>
          <% end %>